div
  h3 #{book.name}
  p 
    span 作者：
    | #{book.author}
  p 
    span 摘要：
    | #{book.brief}
  p
    span 更新于：
    | #{book.updatedAt}
  p
    span 最新章节：
    | #{latestChapter && latestChapter.title}
